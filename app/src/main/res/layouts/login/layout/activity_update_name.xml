<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.pandatv.ui.personal.activity.UpdateNameActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150">
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/update_name_back"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:background="@mipmap/fenlei_fanhui"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x150"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:textSize="@dimen/x35"
            android:textColor="@color/white"
            android:id="@+id/baocun"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:gravity="center"
            android:textSize="@dimen/x50"
            android:textColor="#ffffff"
            android:text="修改昵称"
            />

    </RelativeLayout>


    <EditText
        android:id="@+id/personal_update_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:hint="falses"
        android:textColor="@color/black"
        />

    <TextView
        android:padding="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="用户昵称只能为汉字，字母，数字，下划线组成；"/>

</LinearLayout>
