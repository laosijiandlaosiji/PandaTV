<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_marginTop="@dimen/y8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/watchChat_edit"
            android:background="@drawable/edit_bg"
            android:hint="@string/watchChat_editHint"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x485"
            android:layout_height="@dimen/x70" />
        <Button
            android:id="@+id/watchChat_send"
            android:text="@string/send_edit"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/pandlive_tabIndicatorColor"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y70" />
    </RelativeLayout>
    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/watchChatdCha_ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/watchChatdCha_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    </in.srain.cube.views.ptr.PtrFrameLayout>
</LinearLayout>